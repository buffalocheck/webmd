<form method="post" action="/diseases">
	<div class="form-group">
		<label>Name</label>
		<input type="text" name="name" placeholder="Type disease name here" class="form-control">
	</div>
	<div class="form-group">
		<label>Description</label>
		<textarea name="description" class="form-control"></textarea>
	</div>
	<div class="form-group">
		<label>Severity</label>
		<input type="number" name="severity" placeholder="How bad is it? 1-5" class="form-control"></input>
	</div>
	<div class="form-group">
		<label>Transmission</label>
		<input type="text" name="transmission" placeholder="Is it?" class="form-control"></input>
	</div>
	<div class="form-group">
		<label>Symptoms</label>
		<input type="text" name="symptoms" placeholder="What do you see/feel?" class="form-control"></input>
	</div>
	<input type="submit" class="btn btn-success">
</form>
